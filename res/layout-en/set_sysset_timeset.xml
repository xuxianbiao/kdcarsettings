<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/titlebar"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/controlpowertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/auto_time"
            android:textColor="@color/darkgrey"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/teamNetTimeDiTog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivemodetxtf"
            android:layout_marginTop="10dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/white"
            android:textOff=""
            android:textOn="" />

        <RelativeLayout
            android:id="@+id/set_date_parent"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/set_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/set_system_date"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/set_date_btn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:baselineAlignBottom="true"
                android:src="@drawable/point_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/set_time_parent"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/set_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/set_system_time"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/set_time_btn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:baselineAlignBottom="true"
                android:src="@drawable/entry_disabled" />
        </RelativeLayout>

        <TextView
            android:id="@+id/use24hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/hour_24"
            android:textColor="@color/darkgrey"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/teamTimeFormatTog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivemodetxtf"
            android:layout_marginTop="10dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/white"
            android:textOff=""
            android:textOn="" />

         <RelativeLayout
            android:id="@+id/dataformat_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/set_dateformat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/set_system_dateformat"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/set_dateformat_btn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:baselineAlignBottom="true"
                android:src="@drawable/point_style" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>