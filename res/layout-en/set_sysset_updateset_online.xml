<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <LinearLayout 
	    android:layout_width="400dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
   	<TextView
       android:id="@+id/controlpowertxt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="10dp"
       android:text="@string/wlan_auto_install"
       android:textColor="@color/darkgrey"
       android:visibility="gone"
       android:textSize="20sp" />
   	
     <ToggleButton
            android:id="@+id/teamAutoLoadDiTog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivemodetxtf"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/toggle_selector"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textOff=""
            android:textOn="" />

    <TextView
        android:id="@+id/set_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/online_update"
        android:textColor="@color/darkgrey"
        android:textSize="20sp" />

    <Button
        android:id="@+id/check_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/check_update"
        android:background="@drawable/toggle_up_selector"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>

</RelativeLayout>