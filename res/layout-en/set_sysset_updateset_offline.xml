<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/controlpowertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/update_ui"
            android:textColor="@color/darkgrey"
            android:textSize="20sp" />

        <Button
            android:id="@+id/up_ui_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/toggle_up_selector"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/set_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/update_ser"
            android:textColor="@color/darkgrey"
            android:textSize="20sp" />

        <Button
            android:id="@+id/up_ser_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/toggle_up_selector"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
	        android:id="@+id/offline_update_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
	        android:textColor="@color/darkgrey"
	        android:textSize="20sp" />
        
        <ScrollView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:scrollbarStyle="outsideOverlay" >
	
	        <TextView
	            android:id="@+id/offline_update_content"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:lineSpacingExtra="20dp"
	            android:textColor="@color/darkgrey"
	            android:textSize="18sp" />
	    </ScrollView>
		
        <LinearLayout
            android:id="@+id/offline_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/offline_upgrade_software"
                android:textColor="@color/darkgrey"
                android:textSize="20sp" />

            <Button
                android:id="@+id/up_offline_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/toggle_up_selector"
                android:text="@string/set_system_uplixian"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>